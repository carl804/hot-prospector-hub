# Hot Prospector Hub - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# GoHighLevel (GHL) API Configuration (REQUIRED)
# ========================================
# Your GHL API Key (get from GHL Settings > API)
GHL_API_KEY=

# Your GHL Location ID (sub-account ID)
GHL_LOCATION_ID=

# ========================================
# Google OAuth Configuration
# ========================================
# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=

# Google OAuth Client Secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=

# Google OAuth Redirect URI
# Local dev: http://localhost:8080/api/auth/callback
# Production: https://yourdomain.com/api/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/callback

# Allowed email domain for authentication (e.g., yourcompany.com)
# Leave empty to allow all domains
ALLOWED_EMAIL_DOMAIN=

# Admin emails (comma-separated list) - bypasses domain restriction
ADMIN_EMAILS=

# ========================================
# Google Sheets Configuration (Optional)
# ========================================
# Google Sheet ID for data storage
GOOGLE_SHEET_ID=

# Google Service Account Credentials (JSON string)
GOOGLE_SHEET_CREDENTIALS=

# ========================================
# OpenAI Configuration (Optional)
# ========================================
# OpenAI API Key (if using AI features)
OPENAI_API_KEY=

# ========================================
# Frontend Configuration
# ========================================
# API Base URL for frontend (leave empty for relative /api paths)
VITE_API_BASE_URL=

# ========================================
# Error Monitoring (Optional)
# ========================================
# Sentry DSN for error tracking (get from sentry.io)
VITE_SENTRY_DSN=
